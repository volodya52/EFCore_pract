<Page x:Class="EFCorePract.Pages.UserInGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EFCorePract.Pages"
      mc:Ignorable="d" 
      xmlns:validators="clr-namespace:EFCorePract.Validators"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserInGroup">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel>
                <Button Style="{DynamicResource AddButton}" Click="Back">Назад</Button>
            </StackPanel>
            <StackPanel>
                <Label FontSize="20">Информация о пользователе</Label>
                <TextBlock Text="{Binding _users.Name}"/>
                <TextBlock Text="{Binding _users.Login}"/>
                <TextBlock Text="{Binding _users.Email}"/>
            </StackPanel>

            <StackPanel>
                <Label>Модератор</Label>
                <CheckBox IsChecked="{Binding current2.IsModerator}"/>
            </StackPanel>

            <StackPanel>
                <Label>Дата вступления</Label>
                <DatePicker Style="{DynamicResource DateTimePicker}">
                    <DatePicker.SelectedDate>
                        <Binding Path="current2.JoinedAt" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:CheckDate/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>
                <Button Style="{DynamicResource AddButton}" Click="Add">Добавить</Button>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Column="1"
                  ItemsSource="{Binding service2.InterestGroups}"
                  SelectedItem="{Binding current1}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding Title}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
