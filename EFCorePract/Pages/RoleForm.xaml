<Page x:Class="EFCorePract.Pages.RoleForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EFCorePract.Pages"
      xmlns:validators="clr-namespace:EFCorePract.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoleForm">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <StackPanel>
                <Label>Название роли</Label>
                <TextBox Style="{DynamicResource Login}">
                    <TextBox.Text>
                        <Binding Path="Title" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmptyText/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Button Style="{DynamicResource AddButton}" Click="Save">Сохранить</Button>
                <Button Style="{DynamicResource AddButton}" Click="Back">Назад</Button>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Column="1"
                  ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="Логин"/>
                        <Run Text="{Binding Login}"/>
                        <Run Text="Email"/>
                        <Run Text="{Binding Email}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
